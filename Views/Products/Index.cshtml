@model List<Product>   //

@{
    ViewData["Title"] = "Products Page";
}

<div class="text-center">
    
    <h1 class="display-2">Products</h1>
    <div class="text-end">
        <a asp-action="Create" asp-controller="Products" class="btn btn-primary">Add New</a>
    </div>
    
    
    <table class="table">
        <thead>
            <tr>
                <th>
                    Id
                </th>
                <th>
                    Name
                </th>
                <th>
                    Price
                </th>
                <th>
                    Actions
                </th>
            </tr>
        </thead>
        <tbody>
			@foreach (var item in Model.OrderBy(u => u.Price))  // Order by Price
			{
                <tr>
                    <td>
                        @item.Id
                    </td>
                    <td>
                        @item.Name
                    </td>
                    <td>
                        @item.Price
                    </td>
                    <td>
                        <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-secondary">Edit</a>
                        <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-danger">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>

</div>